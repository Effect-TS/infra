{
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {
        "ignored": [
          "unused_binding",
          "unused_with"
        ]
      },
      "formatting": {
        "command": [
          "alejandra"
        ]
      }
    }
  },
  "[nix]": {
    "editor.formatOnSave": true
  },
  "nix.enableLanguageServer": false,
  "nix.formatterPath": [
    "nix",
    "fmt",
    "--",
    "-"
  ]
}
